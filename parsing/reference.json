/* Reference of all possible fields in data
 ! Not a valid json (because of comments - like this one)
 */
{
    "items": {
        "<name>": {
            "name": "str",
            "icon": "str",  // Filename
            "tier": "str",  // See options for tier

            "tags": "list[str]",  // See tags

            // Optional
            "found_on": "'all' | List[str]",  // See options for planet

            // Optional
            "power": {
                "capacity": "int",  // Optional
                "rate": "float"   // Can be production, consumption or throughput rate
            },

            // Optional
            "unlock": {
                // One of
                "bytes": "int",
                "mission": "str"  // For now
            },

            // Optional
            "slots": {
                // All are optional, but has to have at least one of them
                "Small": "int",
                "Medium": "int",
                "Large": "int",
                "Extra Large": "int"
            },

            // Optional
            "scrap": "float",   // How many scrap you get from shredding item

            // Optional
            "bytes": "int",  // How many bytes item yields when researched

            // Optional
            "dlc": "str"  // Maybe

        }
    },
    "recipes": [
        {
            "result": "str",  // Name of the resulting item
            "count": "int",  // Optional, how many items produced
            "type": "str",  // See options for recipe/type
            "station": "str",  // Optional, name of the crafting station
            "materials": "list[str]"  // Names of items used in recipe
        }
    ],
    "planets": {
        "<name>": {
            "name": "str",
            "type": "str",  // Not sure if needed, but just in case
            "icon": "str",

            // Resources that can be harvested on the planer
            "resources": {
                "primary": "str",  // First cave layer
                "secondary": "str",  // Mountains/deeper caves

                // Gathered using atmospheric condenser
                "atmospheric": {
                    "<resource>": "int"  // PPU for each gas present
                },

                // Power generation properties
                "power": {
                    "sun": "str",  // See options for power_tier
                    "wind": "str"  // See options for power_tier
                }
            },

            // Gateway network properties (spoilers?)
            "gateway": {
                "count": "int",  // Number of gateways on the planer
                "power": "int",  // Power requirement to activate a gateway
                "resource": "str",  // Resource to activate the core
                "symbol": "str"  // Filename of gateway symbol
            },

            "galastrapod": "str" // Name of galastrapod for the planer
        }
    },
    "galastrapods": {
        "name": "str",
        "scientific_name": "str",
        "icon": "str",
        "planet": "str",  // See options for planet
        "food": "list[str]",  // Favourite seeds

        // Power provided when fed
        "power": {
            "icon": "str",
            "description": "str"
        }
    },

    // Little helper to not put the same station in every recipe, if there's only one for the type
    "recipe_types": {
        "<recipe/type>": {
            "stations": "list[str]",  // Stations that do this type of recipe
            "default_station": "str"  // Default station, when not specified
            // TODO ?
        }
    },

/* Below items are not the part of data file */

    // What options can be used for certain keys
    "options": {
        "tier": [
            "Small",
            "Medium",
            "Large",
            "Extra Large"
        ],
        "planet": [
            "Sylva",
            "Desolo",
            "Calidor",
            "Vesania",
            "Novus",
            "Glacio",
            "Atrox"
        ],
        "recipe/type": [
            "printing",
            "refining",
            "chemistry"
            // TODO
        ],
        "power_tier": [
            "Very Low",
            "Low",
            "Medium",
            "High",
            "Very High"
        ]
    },

/* Allowed tags
 * Item can have almost any combination of tags.
 * There's no difference between tag and sub tag in practice, beyond how they
 * would be displayed in filter selection.
 * If a sub-tag is present, its parent must also be present.
 * (Not a hard requirement, but it will make things easier.
 * I don't want to deal with complex tags that go like
 * "Storage/Canister/Soil", because filtering will get messy.)
 * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
    "tags": {
        "Resource": {  // Everything that's used for crafting
            "Natural": {},      // Can be dug up
            "Raw": {},          // Can be refined
            "Refined": {},      // Made in furnace
            "Atmospheric": {},  // Gas, collected using atmospheric condenser
            "Composite": {},    // Made on chemical lab
            "Special": {}       // Does not fit categories above
        },
        "Platform": {},     // Machines can be placed and used on
        // Performs some function when placed on a platform
        "Module": {
            // Used to store items
            "Storage": {
                "Silo": {},  // More slots than normal
                // Stores inside, not on
                "Canister": {
                    "Solid": {},
                    "Gas": {},
                    "Soil": {}  // Also fluid
                }
            },
            "Printer": {},   // Crafts printing recipes
            "Shredder": {},  // Shreds things into scrap
            // Generates or stores power
            "Power": {
                "Generator": {
                    "Fuel": {},
                    "Solar": {},
                    "Wind": {},
                    "RTG": {}
                },
                "Battery": {}
            }
        },

        // Transportation
        "Vehicle": {
            "Rover": {},
            "Shuttle": {},
            "Rail": {}
        },
        "Structure": {},    // Can be placed in the world
        "Widget": {},   // Can be attached to top slots on backpack and used with hotkeys (C and V on pc)

        // Attaches to terrain tool, modifies its functions
        "Augment": {
            "Drill Mod": {}
        },

        // Used for automating resource processing and stuff
        "Automation": {
            "Sensor": {}
        },

        // Sizes/tiers for convenience
        "Small": {},
        "Medium": {},
        "Large": {},
        "Extra Large": {}
    }
}
